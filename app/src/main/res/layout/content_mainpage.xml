<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <variable
            name="postList"
            type="com.example.alan.fyp.ListViewModel.PostListViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.alan.fyp.activity.Mainpage"
        tools:showIn="@layout/app_bar_mainpage">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:itemBinding="@{postList.itemBinding}"
            app:items="@{postList.items}"
            app:layoutManager="@{LayoutManagers.linear()}" />
    </RelativeLayout>
</layout>