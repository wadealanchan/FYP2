<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="postvmodel" type="com.example.alan.fyp.viewModel.PostViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@{postvmodel.title}"
                    android:textStyle="bold"
                    android:textColor="@color/black1"
                    android:textSize="30sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/detail_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        app:imagesrc='@{postvmodel.user.image}'
                        />


                    <TextView
                        android:id="@+id/detail_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.45"
                        android:paddingLeft="10dp"
                        android:gravity="fill_vertical"
                        android:fontFamily="sans-serif"
                        android:text='@{postvmodel.user == null ? "" : postvmodel.user.name}'
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/detail_thumbup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:layout_weight="1.55"
                        android:src="@mipmap/ic_thumbup" />

                </LinearLayout>

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:text="@{postvmodel.description}"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    app:imagesrc="@{postvmodel.image}" />

            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>

</layout>